{
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
      "indent": [true, "spaces", 2],
      "max-classes-per-file": false,
      "no-console": false,
      "no-var-requires": false,
      "semicolon": [true, "never"],
      "quotemark": [true, "single"],
      "trailing-comma": [true, {"multiline": "never", "singleline": "never"}]
  }
}
